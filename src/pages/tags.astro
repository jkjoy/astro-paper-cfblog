---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getTags } from '../lib/wp';

const tags = await getTags();
---

<BaseLayout title="标签" description="文章标签列表">
  {tags.length === 0 ? (
    <p class="text-xs antialiased opacity-60 py-1">暂无标签</p>
  ) : (
    tags.map((tag) => (
      <section class="relative my-10 first-of-type:mt-0 last-of-type:mb-0">
        <h2 class="my-0!">{tag.name}</h2>
        <span class="text-xs antialiased opacity-60">{tag.count ?? 0}</span>
        <a
          class="absolute inset-0 text-[0px]"
          href={`/tag/${tag.slug}`}
          aria-label={`查看标签：${tag.name}`}
        >
          {tag.name}
        </a>
      </section>
    ))
  )}
</BaseLayout>
